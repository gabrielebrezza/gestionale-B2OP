                    continue;
                }
                day.addEventListener('click', () => {
                    if(toDate && fromDate){
                        days.forEach(d => d.classList.remove('selected'));
                        fromDate = '';
                        toDate = '';
                        fromDateElement = '';
                        toDateElement = '';

                        preventivoElement.innerText = '';
                        preventivoElement.style.display = 'none';
                        document.getElementById('userForm').style.display = 'none';
