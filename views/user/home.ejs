<!DOCTYPE html>
<html lang="it">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - CarMunfrà</title>
    <link rel="stylesheet" href="/styles/theme.css">
    <script>
        (function() {
            const savedTheme = localStorage.getItem('theme');
            if (savedTheme === 'dark') {
                document.documentElement.classList.add('dark');
            }
            
        })();
    </script>
    <meta property="og:title" content="CarMunfrà">
    <meta property="og:image" content="/img/main/parco-mezzi.webp">
    <link rel="icon" href="/img/logo-icon.png" sizes="32x32">

    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

    <style>
        body{
            background: var(--pageBg);
            color: var(--textColor);
        }
        #toggleMenuBtn {
            color: var(--defaultWhite);
        }
        #toggleMenuBtn.active {
            color: var(--textColor) !important;
        }
        @media (max-width: 1400px) {
            #toggleMenuBtn {
                color: var(--textColor) !important;
            }
        }
        .mainBg{
            filter: blur(50px);
            transition: filter 1.5s ease-in-out;
        }
        .mainBg{
            /* position: relative; */
            margin-top: calc(- var(--header-height) + 10px) !important;
            height: 100dvh;
            background: 
                /* linear-gradient(to top, var(--elementsBg), #0000, #0000, #0000), */
                /* linear-gradient(to bottom, #333, #0000, #0000, #0000), */
                url('/img/main/parco-mezzi1.webp') no-repeat top center ;
            background-size: cover;
            display: flex;
            align-items: center;
            justify-content: center;
            background-attachment: fixed;
        }
        .bgOverlay{
            position: absolute;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background-color: transparent;
            background-image: radial-gradient(at center center, #153243 0%, #1a6c7a 100%);
            opacity: 0.5;
        }
        .cta{
            display: flex;
            text-align: center;
            align-items: center;
            justify-content: space-around;
            flex-direction: column;
            gap: 20px;
            z-index: 1;
            color: #f4f4f4;
        }
        .cta h2{
            font-size: clamp(1.5rem, 3vw, 1.8rem);
            font-weight: 600;
            line-height: 1.3;
        }
        .cta h1{
            font-size: clamp(2.5rem, 3vw, 3rem);
            text-transform: uppercase;
            font-weight: 900;
        }
        .cta p{
            font-size: clamp(1rem, 3vw, 1.2rem);
            font-weight: 100;
        }
        .btnContainer{
            margin-top: 30px;
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 45px;
        }
        .btnContainer a button{
            padding: 16px 40px;
            border: 2px solid #f4f4f4;
            color: #f4f4f4;
            outline: none;
            background: none;
            font-size: clamp(.6rem, 3vw, .9rem);
            text-transform: uppercase;
            cursor: pointer;
            transition: .5s;
        }
        .btnContainer a:last-child button{
            background: #f4f4f4;
            color: #333;
        }

        .content-section{
            min-height: 75vh;
            display: flex;
            align-items: center;
            flex-direction: column;
            background: var(--pageBg) !important;
            padding: 25px;
        }
        .content-section h3{
            margin-top: 5%;
            text-transform: uppercase;
            font-size: clamp(1.5rem, 3vw, 2rem);

            font-weight: 800;
            text-align: center;
        }
        .content-section p{
            max-width: 500px;
            width: 100%;
            text-align: center;
            margin-top: 25px;
            margin-bottom: 2%;
            font-size: clamp(.9rem, 3vw, 1.2rem);
        }
        .mezzi {
            margin: 5% 0;
            width: 100%;
            display: flex;
            justify-content: center;
            gap: 25px;
            flex-wrap: wrap;
        }
        .mezzoLink{
            color: var(--textColor);
        }
        .mezzi .card{
            max-width: 570px;
            width: 100%;
            position: relative;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            transition: .5s;
        }
        .mezzi .card img{
            max-width: 550px;
            width: 100%;
            aspect-ratio: 16/10;
            object-fit: cover;
            object-position: center;
            cursor: pointer;
            transition: filter .5s;
        }
        .mezzi .card:last-child img{
            object-position: bottom center;
        }
        .mezzi .card p{
            margin-top: 10px;
            text-transform: uppercase;
            text-align: center;
            color:var(--textColor);
            font-size: clamp(1.1rem, 3vw, 1.4rem);
            font-weight: 700;
            transition: .5s;
        }

        @media (hover: hover) and (pointer: fine) {
            .btnContainer a button:hover{
                background: var(--accentColor);
                color: #f4f4f4;
                border: 2px solid #0000;
            }
            .mezzoLink:hover{
                color: var(--defaultWhite);
            }
            .mezzi .card:hover p{
                transform: translateY(-200%);
                color: var(--defaultWhite);
                font-size: clamp(1.3rem, 3vw, 1.6rem);
            }
            .mezzi .card:hover{
                transform: scale(1.1);
            }
            .mezzi:has(.card:hover) .card:not(:hover){
                filter: blur(3px);
                transform: scale(.9);
            }
        }
        @media (hover: none), (pointer: coarse) {
            .btnContainer a button{
                transition: .2s;
            }
            .btnContainer a button:active{
                background: var(--accentColor);
                color: #f4f4f4;
                border: 2px solid #0000;
            }
        }
    </style>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const mainBg = document.querySelector('.mainBg');
            mainBg.style.filter = 'blur(0)';
        });
    </script>
</head>
<body>

    <%- include('components/header.ejs') %>
    <div class="mainBg">
        <div class="bgOverlay"></div>
        <div class="cta">
           <h2>Mezzi di trasporto per ogni esigenza</h2>
           <h1>CarMunfrà</h1>
           <p>NOLEGGIO SENZA CONDUCENTE A BREVE TERMINE DI FURGONI ED AUTOVETTURE</p>
           <div class="btnContainer">
                <a href="/mezzi"><button>mezzi</button></a>
                <a href="/about-us#contact-us"><button>Contattaci</button></a>
           </div>
        </div>
    </div>
    <section class="content-section">
        <h3>Il mezzo perfetto, per ogni esigenza!</h3>
        <p>Scegli tra una vasta selezione di veicoli pensati per soddisfare ogni necessità. Che tu stia cercando soluzioni per il tuo business o per il tempo libero, abbiamo il mezzo giusto per te. </p>
        <div class="mezzi">
            <a class="mezzoLink" href="/mezzi?type=furgone">
                <div class="card">
                    <img src="/img/main/trasporto-merci.webp" loading="lazy" alt="Trasporto Merci">
                    <p>Trasporto Merci</p>
                </div>
            </a>
            <a class="mezzoLink" href="/mezzi?type=auto">
                <div class="card">
                    <img src="/img/main/trasporto-persone.webp" loading="lazy" alt="Trasporto Persone">
                    <p>Trasporto Persone</p>
                </div>
            </a>
        </div>
    </section>
    <script>
            // Seleziona il pulsante
    const menuButton = document.getElementById('toggleMenuBtn');

    // Array di colori per le sezioni
    const textColors = {
        '#f4f4f4': '#1e1e1e',   // Colore del testo per lo sfondo chiaro
        '#1e1e1e': '#f4f4f4'    // Colore del testo per lo sfondo scuro
    };

    // Sezione principale
    const mainSection = document.querySelector('.mainBg');

    // Crea un osservatore per le sezioni
    function updateButtonColor() {
        if (window.innerWidth > 1400) {
            const rect = menuButton.getBoundingClientRect(); 

            let foundColor = false;

            // Controlla ogni sezione
            document.querySelectorAll('.content-section').forEach(section => {
                const sectionRect = section.getBoundingClientRect();

                // Verifica se il pulsante è sopra la sezione
                if (rect.bottom > sectionRect.top && rect.top < sectionRect.bottom) {
                    const bgColor = window.getComputedStyle(section).backgroundColor;
                    const hexColor = rgbToHex(bgColor);

                    if (section === mainSection) {
                        menuButton.style.color = 'white';
                    } else {
                        menuButton.style.color = textColors[hexColor] || 'black';
                    }

                    foundColor = true;
                }
            });
            if (!foundColor) {
                menuButton.style.color = 'white';
            }
        } else {
            menuButton.style.color = 'var(--textColor) !important';
        }
    }
    // Funzione per convertire RGB a HEX
    function rgbToHex(rgb) {
        const rgbValues = rgb.match(/\d+/g).map(Number);
        return `#${((1 << 24) + (rgbValues[0] << 16) + (rgbValues[1] << 8) + rgbValues[2]).toString(16).slice(1)}`;
    }

    window.addEventListener('scroll', updateButtonColor);
    updateButtonColor();
    </script>
    <%- include('components/footer.ejs') %>
</body>
</html>