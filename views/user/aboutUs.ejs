            min-height: 75dvh;
            padding: 5%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            flex-wrap: wrap;
            gap: 50px;
            background: var(--pageBg);
        }
        #about-us article{
            width: fit-content;
            display: flex;
            align-items: center;
            flex-wrap: wrap;
            gap: 15px;
            background: var(--elementsBg);
            border-radius: 10px;
            padding: 20px;
            filter: drop-shadow(10px 10px 2px #0000006d);
            animation: appear linear;
            animation-timeline: view();
            animation-range: entry 0 cover 25%;
        }
        #about-us article:last-child{
