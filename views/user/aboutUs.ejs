        }
        #about-us img{
            max-width: 400px;
            width: 100%;
            object-fit: contain;
            border-radius: 10px;
        }
        #about-us article h3{
            text-transform: uppercase;
            font-size: clamp(1.5rem, 3vw, 2rem);
            font-weight: 700;
        }
        #about-us article p{
            max-width: 500px;
            width: 100%;
            text-align: justify;
            margin-top: 25px;
            margin-bottom: 2%;
            font-size: clamp(.9rem, 3vw, 1.2rem);
        }
        #contact-us{
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            gap: 50px;
            padding: 0% 5% 5% 5%;
            background: var(--pageBg);
        }
        #contact-us h2{
            text-align: center;
            font-size: clamp(1.5rem, 3vw, 1.8rem);
            animation: appear linear;
            animation-timeline: view();
            animation-range: entry 0 cover 10%;
        }
        .contact-form {
            max-width: 800px;
            width: 100%;
            display: flex;
            align-items: center;
            flex-direction: column;
            padding: 20px;
            background: var(--elementsBg);
            border-radius: 10px;
            filter: drop-shadow(10px 10px 2px #0000006d);
            animation: appear linear;
            animation-timeline: view();
            animation-range: entry 0 cover 25%;
        }
        .contact-form h3{
            font-size: clamp(1.2rem, 3vw, 1.4rem);;
            text-transform: capitalize;
            margin: 20px 0;
        }
        .form-group {
            display: flex;
            flex-direction: column;
            width: 100%;
            margin-bottom: 15px;
            caret-color: var(--placeHolders);
        }
        .form-group ::placeholder{
            color: var(--placeHolders);
        }
        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            font-size: 16px;
            color: var(--textColor);
        }

        .form-group input{
            border: none;
            padding: 5px;
            border-bottom: 1px solid var(--accentColor);
            outline: none;
            background: none;
        }
        .form-group textarea{
            max-width: 760px;
            min-height: min-content;
            max-height: 300px;
            border: 1px solid var(--accentColor);
