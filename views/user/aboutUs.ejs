        }
        .form-group input:focus{
            outline: none;
            border-bottom: 2px solid var(--accentColor);
        }
        .form-group textarea:focus{
            outline: none;
            border: 2px solid var(--accentColor);
        }
        .form-group button {
            display: flex;
            align-self: flex-end;
            color: var(--defaultWhite);
            background: var(--accentColor);
            padding: 10px 15px;
            border: none;
