<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/img/logo-icon.png" sizes="32x32">
    <title>Admin - Mezzo</title>
    <style>
        body{
            background: #71a1cb;
        }
        .documentSection{
            margin-top: 150px;
            display: flex;
            justify-content: space-around;
            align-items: center;
            flex-wrap: wrap;
        }
        .printForm{
            margin: 10px;
            max-width: 200px;
            width: 100%;
            color: #f1f1f1;
            display: flex;
            justify-content: space-between;
            align-items: center;
            font-size: 1.5rem;
        }
        .printForm button{
            cursor: pointer;
            background: #0000;
            outline: none;
            border: none;
            color: #f1f1f1;
        }
        #updateUserForm{
            display: flex;
            align-items: center;
            flex-direction: column;
        }
        table {
            /* width: 50%; */
            border-collapse: collapse;
            border-spacing: 0;
            margin: 50px;
        }
        th, td {
            padding: 12px 15px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            background: #f1f1f1;
        }

        th {
            color: #fff;
            background: #5681a9;
            text-transform: uppercase;
        }
        th:first-child{
            border-radius: 5px 0 0  0;
        }
        th:last-child{
            border-radius:  0 5px 0  0;
        }
        tfoot td{
            padding: 0;
            background: #0000;
            border: none;
        }
        #submitFormBtn{
            width: 100%;
            /* margin-top: 5px; */
            cursor: pointer;
            padding: 10px 20px;
            background: green;
            color: #fff;
            transition: .5s;
            outline: none;
            border: none;
            border-radius: 0 0 5px 5px;
        }
        #submitFormBtn:hover{
            opacity: .7;
        }
        .imageForms{
            width: 50%;
            display: flex;
            justify-content: space-evenly;
            align-items: center;
            flex-wrap: wrap;
        }
        .imageForm{
            max-width: 250px;
            width: 100%;
            background: #eee;
            height: fit-content;
            padding: 25px;
            border-radius: 5px;
            text-align: center;
            color: #333;
            display: flex;
            align-items: center;
            flex-direction: column;
            margin-block: 15px;
        }
        #signPic{
            width: 175px;
            height: 50px;
            object-fit: contain;
            margin-bottom: 10px;
        } 
        #profilePic{
            object-fit: contain;
            width: 50px;
            height: 50px;
            margin-bottom: 10px;
        }

        .imageForm button, .imageForm label{
            width: fit-content;
            background: #71a1cb;
            color: #fff;
            padding: 12px 12px;
            margin: 10px auto;
            border-radius: 5px;
            border: none;
            outline: none;
            cursor: pointer;
            transition: .5s;
            font-size: 1rem;
        }
        .uploadBtn{
            padding: 12px 20px;
        }
        .imageForm button:hover, .imageForm label:hover {
            background: #5681a9;
        }
        .imageForm input{
            display: none;
        }
        tr:has(.attivo){
            background: green;
            color: #fff;
        }
        tr:has(.scaduto){
            background: red;
            color: #fff;
        }
        .field{
            margin-top: 5px;
            display: flex;
            align-items: center;
            text-align: justify;
        }
        .field p{
            font-weight: bold;
        }
        tr:has(input[value="respinto"]:checked){
            background: red;
            color: #fff;
        }
        tr:has(input[value="idoneo"]:checked){
            background: green;
            color: #fff;
        }
        tr:has(input[value="assente"]:checked){
            background: orange;
            color: #fff;
        }

        .formField{
            display: flex;
            align-items: center;
        }
        .formField button{
            width: fit-content;
            height: 40px;
            margin-inline: 10px;
            display: flex;
            align-items: center;
        }
        button.deleteButton {
            background: red;
            transition: .5s;
        }
        button.deleteButton:hover {
            background: rgb(119, 64, 64);
        }

        #newRentBtnTd{
            text-align: center;
        }
        .newRentInput{
            display: none;
        }
        #newRentForm{
            display: flex;
        }
        tfoot td button{
            width: 100%;
            background: green;
            color: #f1f1f1;
            cursor: pointer;
            padding-block: 10px;
            border: none;
            outline: none;
            border-radius: 0 0 10px 10px;
        }
        #tableSection{
            display: flex;
            align-items: center;
            justify-content: center;
            flex-wrap: wrap;
        }
    </style>
    <link  href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.css" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.2/cropper.min.js"></script>
    
</head>
<body>
    <%- include('components/header.ejs') %>
    <section class="documentSection">
        
        <div class="imageForms">
            <form class="imageForm" id="profileImageForm">
                <h2>Foto</h2>
                <input type="hidden" name="id" value="<%= mezzo._id %>">
                <input type="hidden"  name="location" id="profileLocation" value="immaginiRinnovi">
                <img id="profilePic" src="<%= `/images?dir=${encodeURIComponent('immaginiRinnovi/')}${encodeURIComponent(mezzo._id)}.jpeg` %>" alt="Immagine Profilo" onerror="this.style.display='none';">

                <input type="file" id="inputProfileFile" name="inputProfileFile" accept="image/*">
                <div class="formField">
                    <button type="submit" title="Salva Immagine">
                        <span class="material-symbols-outlined">
                            save
                        </span>
                    </button>
                    <label class="uploadBtn" for="inputProfileFile" title="Carica Immagine">
                        <span class="material-symbols-outlined">
                            upload
                        </span>
                    </label>
                    <button type="button" class="deleteButton" title="Elimina Immagine">
                        <span class="material-symbols-outlined">
                            delete
                        </span>
                    </button>
                </div>
            </form>

        </div>
    </section>
    <section id="tableSection">
        <form id="updateMezzoForm" action="/admin/mezzo/updateMezzo" method="POST">
            <table>
                <thead>
                    <tr>
                        <th>Campo</th>
                        <th>Valore</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <input type="hidden" name="id" value="<%= mezzo._id %>">
                        <td>Targa</td>
                        <td><input type="text" id="targa" name="targa" value="<%= mezzo.targa %>"></td>
                    </tr>
                    <tr>
                        <td>Marca</td>
                        <td><input type="text" id="marca" name="marca" value="<%= mezzo.marca %>"></td>
                    </tr>
                    <tr>
                        <td>Modello</td>
                        <td><input type="text" id="modello" name="modello" value="<%= mezzo.modello %>"></td>
                    </tr>
                    <tr>
                        <td>Descrizione</td>
                        <td><input type="text" id="descrizione" name="descrizione" value="<%= mezzo.descrizione %>"></td>
                    </tr>
                    <tr>
                        <td>Anno</td>
                        <td><input type="text" id="anno" name="anno" value="<%= mezzo.anno %>"></td>
                    </tr>
                    <tr>
                        <td>Km</td>
                        <td><input type="text" id="km" name="km" value="<%= mezzo.km %>"></td>
                    </tr>
                    <tr>
                        <td>Note</td>
                        <td><textarea name="note" id="note"><%= mezzo.note %></textarea></td>
                    </tr>
                </tbody>
                <tfoot>
                    <td colspan="2"><button id="submitFormBtn" type="submit">Salva</button></td>
                </tfoot>
            </table>
        </form>
            <table>
                <thead>
                    <th>Da</th>
                    <th>A</th>
                    <th>C. Fiscale</th>
                    <th>Km</th>
                    <th>Serbatoio Inizio</th>
                    <th>Serbatoio Fine</th>
                </thead>
                <form id="newRentForm" action="/admin/mezzi/newRent" method="POST">
                <tbody>
                        <% for(const noleggio of mezzo.storicoNoleggi){ %>
                            <tr>
                                <td><%= noleggio.fromDate.split('-').reverse().join('/') %></td>
                                <td><%= noleggio.toDate.split('-').reverse().join('/') %></td>
                                <td><%= noleggio.noleggiatore %></td>
                                <td><%= noleggio.km %> <strong>KM</strong></td>
                                <td><%= noleggio.serbatoioInizio %> <strong>L</strong></td>
                                <td><%= noleggio.serbatoioFine %> <strong>L</strong></td>
                            </tr>
                        <% } %>
                        <tr>
                            <td id="newRentBtnTd" colspan="6">
                                    <span id="newRentBtn" class="material-symbols-outlined">
                                        add
                                    </span>
                            </td>
                            <input type="hidden" name="id" value="<%= mezzo._id %>">
                            <td class="newRentInput"><input type="date" name="fromDate" id="fromDate"></td>
                            <td class="newRentInput"><input type="date" name="toDate" id="toDate"></td>
                            <td class="newRentInput"><input type="text" name="noleggiatore" id="noleggiatore"></td>
                            <td class="newRentInput"><input type="number" name="km" id="km"></td>
                            <td class="newRentInput"><input type="number" name="serbatoioInizio" id="serbatoioInizio"></td>
                            <td class="newRentInput"><input type="number" name="serbatoioFine" id="serbatoioFine"></td>
                        </tr>
                 </tbody>
                 <tfoot >
                    <td id="newRentSubmitBtnContainer" colspan="6" style="display: none;">
                        <button type="submit">Salva</button>
                    </td>
                 </tfoot>
                </form>
            </table>
    </section>
    
        <script>
            const newRentBtn = document.getElementById('newRentBtn');
            const newRentBtnTd = document.getElementById('newRentBtnTd');
            const newRentInput = document.querySelectorAll('.newRentInput');
            const newRentSubmitBtnContainer = document.getElementById('newRentSubmitBtnContainer');
            newRentBtn.addEventListener('click', () => {
                newRentBtnTd.remove();
                newRentSubmitBtnContainer.style.display = 'table-cell';
                for(const input of newRentInput){
                    input.style.display = 'table-cell';
                }
            });
        </script>
</body>
</html>