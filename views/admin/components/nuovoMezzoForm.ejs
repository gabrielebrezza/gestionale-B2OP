<style>

#openModalBtn{
    z-index: 1;
    height: var(--header-height);
    position: absolute;
    top: 0;
    right: 0;
    padding: 10px 20px;
    background: #0000;
    border: none;
    outline: none;
    transition: .5s;
}
#openModalBtn span{
    font-size: 2.5rem;
    color: var(--textColor);
}
#blurredBg{
    display: none;
    z-index: 2;
    position: fixed;
    top: 0;
    right: 0;
    width: 100vw;
    overflow-x: hidden;
    height: 100%;
    background: var(--accentColor);
    opacity: 0;
    transition: opacity .5s;
}
#modalContainer{
    pointer-events: none;
    z-index: 2;
    position: fixed;
    top: 0;
    right: 0;
    width: 100vw;
    height: 100%;
    border: none;
    display: none;
    align-items: center;
    justify-content: center;
    opacity: 1;
    transition: opacity .5s;
}

#nuovoMezzoForm{
    pointer-events: all;
    z-index: 3;
    max-width: 400px;
    width: 100%;
    max-height: 500px;
    height: 100%;
    overflow-y: auto;
    background: var(--elementsBg);
    border-radius: 10px;
    padding: 35px;
}
#nuovoMezzoForm .field:has(:not(#closeModalBtn)){
    width: 100%;
    margin-block: 50px;
}
#nuovoMezzoForm .field:has(:not(#closeModalBtn, h3, button)){
    display: flex;
    flex-direction: column;
    height: 30px;
}
#nuovoMezzoForm .field:has(#closeModalBtn){
    cursor: pointer;
    display: flex;
    justify-content: end;
    color: var(--textColor);
}
#nuovoMezzoForm .title h3{
    text-align: center;
    font-size: 1.4rem;
    color: var(--textColor);
}
#nuovoMezzoForm .field label{
    user-select: none;
    cursor: text;
    font-size: 1.2rem;
    margin-bottom: -1.9rem; 
    margin-left: 10px;
    z-index: 3;
    color: var(--textColor);
    transition: .5s;
}
#nuovoMezzoForm .field input{
    padding: 8px;
    outline: none;
    border: none;
    border-bottom: 2px solid var(--accentColor);
    background: #0000;
    color: var(--textColor);
}
#nuovoMezzoForm .field:has(input:focus, input:not(:placeholder-shown)) label {
    margin-bottom: 0;
    color: var(--accentColor);
}

#nuovoMezzoForm .field:has(button){
    display: flex;
    align-items: center;
    justify-content: center;
}
#nuovoMezzoForm .field button{
    margin-top: 15px;
}
#nuovoMezzoForm .field button{
    color: var(--textColor);
    font-size: 1.3rem;
    cursor: pointer;
    background: var(--accentColor);
    padding: 10px 30px;
    border-radius: 5px;
    border: none;
    outline: none;
    transition: .5s;
}
#nuovoMezzoForm .field button:hover{
    scale: 1.2;
    opacity: .8;
}
#nuovoMezzoForm .fieldSelect{
    display: flex;
    flex-direction: column;
    gap: 10px;
}
#nuovoMezzoForm .fieldSelect label{
    color: var(--textColor);
    font-size: 1.2rem;
}
#nuovoMezzoForm .fieldSelect select{
    padding: 8px;
    outline: none;
    border: none;
    border-bottom: 2px solid var(--accentColor);
    background: #0000;
    color: var(--textColor);
}
#nuovoMezzoForm .fieldSelect select option{
    background: var(--elementsBg);
    color: var(--textColor);
}
</style>

<div id="blurredBg"></div>

<button id="openModalBtn">
    <span class="material-symbols-outlined">
        add
    </span>
</button>
<section id="modalContainer">
    
    <form id="nuovoMezzoForm" action="/admin/mezzi/nuovoMezzo" method="POST">
        <div class="field">
            <span id="closeModalBtn" class="material-symbols-outlined">
                close
            </span>
        </div>
        <div class="title">
            <h3>Nuovo Mezzo</h3>
        </div>
        <div class="field">
            <label for="targa">Targa:</label>
            <input type="text" id="targa" name="targa" required placeholder=" ">
        </div>
        <div class="field">
            <label for="marca">Marca:</label>
            <input type="text" id="marca" name="marca" placeholder=" ">
        </div>
        <div class="field">
            <label for="modello">Modello:</label>
            <input type="text" id="modello" name="modello" placeholder=" ">
        </div>
        <div class="field">
            <label for="descrizione">Descrizione:</label>
            <input type="text" id="descrizione" name="descrizione" placeholder=" ">
        </div>
        <div class="field">
            <label for="anno">Anno:</label>
            <input type="number" id="anno" name="anno" min="1995" placeholder=" ">
        </div>
        <div class="field">
            <label for="km">Km:</label>
            <input type="number" id="km" name="km" placeholder=" ">
        </div>
        <div class="fieldSelect">
            <label for="type">Tipo:</label>
            <select name="type" id="type" placeholder=" ">
                <option value="furgone">Furgone</option>
                <option value="auto">Auto</option>
                <option value="moto">Moto</option>
            </select>
        </div>
        <div class="field">
            <button type="submit">Salva</button>
        </div>
    </form>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
        const openModalBtn = document.getElementById('openModalBtn');
        const blurredBg = document.getElementById('blurredBg');
        const modalContainer = document.getElementById('modalContainer');
        const closeModalBtn = document.getElementById('closeModalBtn');
        openModalBtn.addEventListener('click', () => {
            blurredBg.style.display = 'block';
            modalContainer.style.display = 'flex';
            setTimeout(() => {
                blurredBg.style.opacity = .4;
                modalContainer.style.opacity = 1;
            }, 100);
        });

        closeModalBtn.addEventListener('click', () => {
            closeSearchForm()
        });
        blurredBg.addEventListener('click', () => {
            closeSearchForm()
        });

        const closeSearchForm = () => {
            blurredBg.style.opacity = 0;
            modalContainer.style.opacity = 0;
            openModalBtn.style.transform = 'rotateZ(0)';
            setTimeout(() => {
                blurredBg.style.display = 'none';
                modalContainer.style.display = 'none';
            }, 500);
        }
    });
</script>